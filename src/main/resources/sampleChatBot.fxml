<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import java.net.URL?>
<VBox fx:controller="ControllerChatBot" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" alignment="center"
        stylesheets="Style.css">

    <TextArea fx:id="textAreaID" editable="false" VBox.vgrow="ALWAYS"/>

    <HBox>
        <TextField fx:id="textFieldID" onAction="#sendMsg" HBox.hgrow="ALWAYS" promptText="Введите сообщение."/>
        <Button fx:id="sendID" onAction="#sendMsg" text="Send"/>
    </HBox>
</VBox>
